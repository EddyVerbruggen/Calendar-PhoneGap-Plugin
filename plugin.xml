<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
      	xmlns:android="http://schemas.android.com/apk/res/android"
        id="nl.x-services.plugins.calendar"
        version="1.0">

  <name>Calendar</name>

  <description>
    This plugin allows allows you to manipulate the native calendar.
  </description>

  <license>MIT</license>

  <engines>
    <engine name="cordova" version=">=2.3.0"/>
  </engines>

  <asset src="www/Calendar.js" target="js/plugins/Calendar.js"/>

  <!-- ios -->
 	<platform name="ios">
 		<config-file target="config.xml" parent="/*">
 			<feature name="Calendar">
 				<param name="ios-package" value="Calendar" />
 			</feature>
 		</config-file>
 		<header-file src="src/ios/Calendar.h" />
 		<source-file src="src/ios/Calendar.m" />
		<framework src="EventKit.framework" />
		<framework src="EventKitUI.framework" />
 	</platform>

  <!-- android -->
  <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/manifest/application">
      <activity android:name="nl.x-services.plugins.Calendar" android:label="@string/app_name">
        <intent-filter/>
      </activity>
    </config-file>

    <config-file target="res/xml/config.xml" parent="plugins">
      <plugin name="Calendar" value="nl.x-services.plugins.Calendar"/>
    </config-file>

    <source-file src="src/android/nl/xservices/plugins/Calendar.java" target-dir="src/android/nl/xservices/plugins"/>
  </platform>

</plugin>